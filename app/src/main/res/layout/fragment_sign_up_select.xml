<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbarThumbVertical="@null"
    tools:context=".ui.Fragments.SignUpSelect"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/cheapbestmainlogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/who_are_you_siging_up_as"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView
            android:gravity="center"
            android:text="Vendors are a person or company offering something for sale,especially a trader in the street"
            android:textColor="@color/color_green"
            android:textSize="10sp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            tools:ignore="SmallSp" />
        <Button
            android:textAllCaps="false"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/vendor"
            android:id="@+id/btn_vendor"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_button_style"
            android:layout_height="55dp" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/color_green" />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/color_green"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/or" />
            <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/color_green" />
        </LinearLayout>
        <Button
            android:textAllCaps="false"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/user"
            android:id="@+id/sign_up_user"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_button_style"
            android:layout_height="55dp" />
</LinearLayout>
    </LinearLayout>
</ScrollView>