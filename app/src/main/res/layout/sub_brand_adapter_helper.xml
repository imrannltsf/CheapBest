<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_marginBottom="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/rectangle_dummy"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="78dp">
        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/p_logo"
            android:layout_width="@dimen/image_adapter_width"
            android:layout_height="@dimen/image_adapter_height"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true" />
        <RelativeLayout
            android:layout_toLeftOf="@+id/layout_location_subbrand"
            android:layout_toRightOf="@+id/p_logo"
            android:layout_gravity="center"
            android:id="@+id/layout_values_subbrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/p_logo"
            android:layout_toStartOf="@+id/layout_location_subbrand">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/tv_p_name_subbrand"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:fontFamily="@font/abel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_list"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    tools:fontFamily="@font/abel"
                    android:id="@+id/tv_p_price_sub_brand"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="6dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:textSize="@dimen/text_offers"
                    android:textColor="@color/color_text_generic"
                    tools:ignore="RtlCompat,SmallSp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_location_subbrand"
            android:layout_toLeftOf="@+id/layout_save_subbrand"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/layout_save_subbrand">
            <ImageView
                android:background="#7cc7e9"
                android:clickable="false"
                android:id="@+id/kls"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:src="@drawable/es_where"
                android:layout_centerInParent="true"
            android:scaleType="centerInside"
                android:contentDescription="@string/app_name" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_save_subbrand"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:background="#57b357"
                android:id="@+id/klss_add"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/now_sav"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/red_limit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_offers" />

</RelativeLayout>

