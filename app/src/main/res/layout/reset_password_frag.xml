<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cheapbestmainlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.ForgotPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



    <ImageView
        android:id="@+id/layout_hint_confirm"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:background="@drawable/otp_bg"
        android:layout_height="300dp">



    </ImageView>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="420dp"
        android:id="@+id/layout_detail"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:textStyle="bold"
            android:text="Confirm Your Account"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView
            android:gravity="center"
            android:text="We send a code to your provided gmail address,Kindly Confirm Your account by entering code below"
            android:textColor="@color/color_green"
            android:textSize="10sp"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"

            tools:ignore="SmallSp" />


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_sentmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/ic_lock" />
            <com.takisoft.datetimepicker.sample.ui.utills.Pinview
                android:id="@+id/pinview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cursorVisible="false"
                app:textSize="8sp"
                app:inputType="number"
                app:forceKeyboard="true"
                app:password="false"
                app:pinBackground="@drawable/example_drawable_with_grey_disabled"
                app:pinHeight="40dp"
                app:pinLength="6"
                app:pinWidth="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_sentmail"
                android:layout_toEndOf="@+id/img_sentmail"/>
            <EditText
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_sentmail"
                android:hint="1234567890"
                android:inputType="text"
                android:textSize="14sp"
                android:id="@+id/et_confirmcode_resetpass"
                android:textColorHint="#c8c8d7"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_sentmail"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_green"/>



    </LinearLayout>

    <Button
        android:layout_below="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/submit"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/btn_submit_code_reset"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/my_button_style"
        android:layout_height="55dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="RtlCompat"
        android:gravity="center"
        android:id="@+id/tv_back_reset_pass"
        android:textStyle="bold"
        android:textColor="#7BC7E9"
        android:textSize="15sp"
        android:text="@string/back"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/image_loading_forgot_reset"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/image_loading_confirm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


