<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_main_board"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.MainDashBoard">

    <FrameLayout
        android:layout_above="@+id/layout_footer"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Activity.MainDashBoard" />

    <RelativeLayout

        android:id="@+id/layout_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:background="@drawable/footer"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/home_main_dash"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/home"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/coupans_main_dash"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/share"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:clickable="false"
                android:visibility="invisible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/person"
                android:contentDescription="@string/app_name" />
            <ImageView
                android:visibility="invisible"
                android:clickable="false"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/person"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/connect_refrence_bottomsheet"
                android:layout_width="35dp"
                android:layout_marginBottom="10dp"
                android:layout_height="35dp"
                android:background="@drawable/attachment"
                android:contentDescription="@string/app_name" />


            <ImageView
                android:id="@+id/person_main_dash"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="35dp"
                android:layout_marginBottom="10dp"
                android:layout_height="35dp"
                android:background="@drawable/person"
                android:contentDescription="@string/app_name" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/search_main_dashboard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/logo_search"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
