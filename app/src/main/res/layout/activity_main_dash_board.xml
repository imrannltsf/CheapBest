<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_main_board"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.MainDashBoard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_footer"
        android:layout_marginBottom="-15dp"

        tools:context=".ui.Activity.MainDashBoard" />

    <RelativeLayout

        android:id="@+id/layout_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:background="@drawable/footer_bg"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <!--android:background="@drawable/home"-->
            <ImageView
                android:id="@+id/home_main_dash"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                android:src="@drawable/home_man"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="25dp"
                android:contentDescription="@string/app_name"
                 />

            <ImageView
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/home_main_dash"
                android:layout_toRightOf="@+id/home_main_dash"
                android:id="@+id/coupans_main_dash"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_height="25dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/coupon_home"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:clickable="false"
                android:visibility="invisible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/coupans_main_dash"
                android:layout_toRightOf="@+id/coupans_main_dash"
                android:background="@drawable/person"
                android:contentDescription="@string/app_name" />
            <ImageView
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:clickable="false"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/coupans_main_dash"
                android:layout_toRightOf="@+id/coupans_main_dash"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/person"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_marginRight="80dp"
                android:layout_marginEnd="80dp"
                android:id="@+id/search_refrence_bottomsheet"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/person_main_dash"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:layout_marginBottom="10dp"
                android:layout_height="25dp"
                android:src="@drawable/link_main"
                android:contentDescription="@string/app_name"
                android:layout_toStartOf="@+id/person_main_dash" />


            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/person_main_dash"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_marginBottom="10dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/profile_man"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/search_main_dashboard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="38dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
          android:layout_above="@id/layout_footer"
        android:src="@drawable/logo_search"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
