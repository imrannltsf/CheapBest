<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/cheapbestmainlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.SubBrandFragment">


    <ImageView
        android:background="#bfb4b4"
        android:layout_alignParentTop="true"
        android:id="@+id/cover_photo_brand"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="200dp">

    </ImageView>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/cover_photo_brand"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_header_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha=".75"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/id_vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_header_logo"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_header_logo"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


    <View
        android:layout_below="@+id/cover_photo_brand"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">

    </View>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_header"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/mycircle">

        <ImageView
            android:visibility="gone"
            android:id="@+id/brand_logo"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_centerInParent="true"
            android:background="@drawable/brand_d"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

    </RelativeLayout>
    <ListView
        android:layout_marginTop="10dp"
        android:scrollbarThumbVertical="@null"
        android:layout_below="@+id/cover_photo_brand"
        android:divider="@null"
       android:paddingBottom="25dp"
        android:id="@+id/lv_products_sub_brands"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cover_photo_brand"
        android:orientation="vertical"
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="No results found!"
            android:textSize="@dimen/empty_list_size"
            tools:fontFamily="@font/abel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>


